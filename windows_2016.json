{
"builders": [
    {
      "type": "googlecompute",
      "project_id": "your-project-id",
      "source_image": "windows-server-2016-dc-v20170227",
      "disk_size": "50",
      "machine_type": "n1-standard-1",
      "communicator": "winrm",
      "winrm_username": "packer_user",
      "winrm_insecure": true,
      "winrm_use_ssl": true,
      "metadata": {
        "windows-startup-script-cmd": "winrm quickconfig -quiet & net user /add packer_user & net localgroup administrators packer_user /add & winrm set winrm/config/service/auth @{Basic=\"true\"}"
      },
      "zone": "us-west1-a",
      "image_name": "acme-windows-server-2016-dc-v20170227-{{timestamp}}",
      "image_description":"acme-windows-server-2016-dc-v20170227-{{timestamp}}"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "builder/cis-benchmark-gpos",
      "destination": "C:/Windows/Temp",
      "direction": "upload"
    },
    {
      "type": "windows-shell",
      "inline": ["certutil -decode \"C:\\Windows\\Temp\\cis-benchmark-gpos\\localgpo.txt\" \"C:\\Windows\\Temp\\cis-benchmark-gpos\\localgpo.zip\""]
    },
    {
      "type": "powershell",
      "inline": ["Expand-Archive -Path C:\\Windows\\Temp\\cis-benchmark-gpos\\localgpo.zip -DestinationPath C:\\Windows\\Temp\\cis-benchmark-gpos\\"]
    },
    {
      "type": "windows-shell",
      "inline": ["cscript \"C:\\Windows\\Temp\\cis-benchmark-gpos\\LocalGPO.wsf\" /path:\"C:\\Windows\\Temp\\cis-benchmark-gpos\\cis\\{0ad8bfdf-c7f0-4715-8ad6-ce95e0c13adc}"]
    },    
    {
      "type": "windows-shell",
      "remote_path": "c:/Windows/Temp/script.vbs",
      "execute_command": "cscript c:/Windows/Temp/script.vbs",
      "scripts": [
        "./builder/setup-scripts/updates.vbs"
      ]
    }
  ]
}

